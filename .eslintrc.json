{
  "extends": ["@nuxt/eslint-config"],
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "prefer-const": "error",
    "no-unused-vars": "error",
    "@typescript-eslint/no-unused-vars": "error",
    "vue/html-self-closing": [
      "error",
      {
        "html": {
          "void": "always",
          "normal": "always",
          "component": "always"
        },
        "svg": "always",
        "math": "always"
      }
    ],
    "vue/max-attributes-per-line": [
      "error",
      {
        "singleline": 3,
        "multiline": 1
      }
    ]
  }
}
